@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-light ms-log-button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Benvenuto @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Foto", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-light ms-log-button mt-2 mx-2">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light ms-log-button" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light ms-log-button mx-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
